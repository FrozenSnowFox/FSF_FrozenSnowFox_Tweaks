				<xpath>/Defs/ThingDef[defName = "Plant_YellowGrass"]/plant</xpath>
				<value>
					<harvestMinGrowth>0.33</harvestMinGrowth>
					<harvestTag>Standard</harvestTag>
					<harvestedThingDef>Hay</harvestedThingDef>
					<harvestYield>3</harvestYield>
				</value>
			</li>
			
