<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFPlantsGiveHay</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
	<!-- Plants Give Hay -->
	
			<!--
				Haygrass
				growDays 7
				harvestYield 18
				Yield Per Grow Day 2.571
				
				Grass
				growDays 2.5
				harvestYield 3 (Rounded Down from 3.125)
				Yield Per Grow Day 1.25 (50% Efficiency of Haygrass)
				
				Long Grass
				growDays 3
				harvestYield 6 (Rounded Up from 1.928)
				Yield Per Grow Day 1.928 (75% Efficiency of Haygrass)
			-->
			
		<!-- Core -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_Grass"]/plant</xpath>
				<value>
					<harvestMinGrowth>0.33</harvestMinGrowth>
					<harvestTag>Standard</harvestTag>
					<harvestedThingDef>Hay</harvestedThingDef>
					<harvestYield>3</harvestYield>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_TallGrass"]/plant</xpath>
