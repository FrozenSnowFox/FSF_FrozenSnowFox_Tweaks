<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFFilthVanishesWithRainAndTime</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>

			<!-- Filth Vanishes With Rain And Time -->
				
			<!-- Remove all entries for rainWashes then readd them to ensure they're all true -->
			
            <li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef
				[defName != "Filth_GrayFlesh"]
				[defName != "Filth_RevenantBloodPool"]
				[defName != "Filth_RevenantSmear"]
				[defName != "RG_FilthWater"]
				[defName != "RG_FilthWaterSpatter"]
				[filth] /filth/rainWashes</xpath>
            </li>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef
				[defName != "Filth_GrayFlesh"]
				[defName != "Filth_RevenantBloodPool"]
				[defName != "Filth_RevenantSmear"]
				[defName != "RG_FilthWater"]
				[defName != "RG_FilthWaterSpatter"]
				[filth] /filth</xpath>
				<value>
					<rainWashes>true</rainWashes>
				</value>
			</li>
				
			<!-- Only change entries with disappearsInDays 15 or above -->

			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef [number(substring-before(filth/disappearsInDays, '~')) >= 15] /filth/disappearsInDays</xpath>
				<value>
					<disappearsInDays>14~15</disappearsInDays>
				</value>
			</li>
				
			</operations>
		</Operation>
		
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFFilthVWRATGrayFlesh</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
				
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
			<!-- Anomaly DLC - Change Gray Flesh Filth to Vanish -->
			
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Filth_GrayFlesh"]/filth/rainWashes</xpath>
				<value>
					<rainWashes>true</rainWashes>
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Filth_GrayFlesh"]/filth/rainWashes</xpath>
				<value>
					<rainWashes>true</rainWashes>
				</value>
			</li>
				
			</operations>
		</Operation>
			
		</caseTrue>
	</Operation>
			
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFFilthVWRATRevenant</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
				
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
			<!-- Anomaly DLC - Change Revenant Filth to Vanish -->
			
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Filth_RevenantSmear"]/filth/rainWashes</xpath>
				<value>
					<rainWashes>true</rainWashes>
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Filth_RevenantBloodPool"]/filth/rainWashes</xpath>
				<value>
					<rainWashes>true</rainWashes>
				</value>
			</li>
				
			</operations>
		</Operation>
			
		</caseTrue>
	</Operation>
			
		</caseTrue>
	</Operation>

</Patch>