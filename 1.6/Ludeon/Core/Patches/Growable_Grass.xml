<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFGrowableGrass</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
			<!-- Growable Grass -->
			
	<!-- Core -->
		
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_Grass"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_TallGrass"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
			
	<!-- Biotech DLC -->
			
			<li MayRequire="Ludeon.RimWorld.Biotech" Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_GrayGrass"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
				
	<!-- Odyssey DLC -->
			
			<li MayRequire="Ludeon.RimWorld.Odyssey" Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_Nightgrass"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Odyssey" Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_YellowGrass"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Odyssey" Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Plant_YellowTallGrass"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
			
	<!-- Regrowth 2 -->
		
			<li MayRequire="ReGrowth.BOTR.Core" Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name = "RG_GrassBase"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
			
			<li MayRequire="ReGrowth.BOTR.Core" Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name = "RG_TallGrassBase"]/plant</xpath>
				<value>
					<sowTags>
						<li>Ground</li>
					</sowTags>
				</value>
			</li>
				
			</operations>
		</Operation>
			
		</caseTrue>
	</Operation>

</Patch>