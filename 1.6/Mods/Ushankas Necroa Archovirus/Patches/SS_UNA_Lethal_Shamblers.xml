<?xml version="1.0" encoding="utf-8"?>
<Patch>
			
	<!-- Ushankas Necroa Archovirus Lethal Shamblers -->
			
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFLethalShamblers</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ushanka.NecroaArchovirus" Class="PatchOperationReplace">
				<xpath>/Defs/HediffDef[defName="USH_Necroa"]/description</xpath>
				<value>
					<description>An infectious disease caused by the necroa archovirus. It is lethal, it progresses rapidly and it cannot be treated or cured.\n\nRule #2\nDouble tap</description>
				</value>
			</li>
				
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ushanka.NecroaArchovirus" Class="PatchOperationReplace">
				<xpath>/Defs/HediffDef[defName="USH_Necroa"]/tendable</xpath>
				<value>
					<tendable>false</tendable>
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ushanka.NecroaArchovirus" Class="PatchOperationRemove">
				<xpath>/Defs/HediffDef[defName="USH_Necroa"]/comps/li[@Class = "HediffCompProperties_TendDuration"]</xpath>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ushanka.NecroaArchovirus" Class="PatchOperationReplace">
				<xpath>/Defs/HediffDef[defName="USH_Necroa"]/comps/li[@Class = "HediffCompProperties_Immunizable"]</xpath>
				<value>
					<li Class="HediffCompProperties_Immunizable">
						<severityPerDayNotImmune>0.4976</severityPerDayNotImmune>
						<severityPerDayImmune>-0.4976</severityPerDayImmune>
						<immunityPerDaySick>0.0001</immunityPerDaySick>
						<immunityPerDayNotSick>-0.06</immunityPerDayNotSick>
					</li>
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ludeon.RimWorld.Biotech,Ushanka.NecroaArchovirus" Class="PatchOperationAdd">
				<xpath>/Defs/GeneDef[defName="PerfectImmunity"]/makeImmuneTo</xpath>
					<value>
						<li>USH_Necroa</li>
					</value>
			</li>
				
			</operations>
		</Operation>
			
		</caseTrue>
	</Operation>

</Patch>