<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<!-- Ushankas Necroa Archovirus Permanent Shambler Infection-->
			
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>FrozenSnowFox.FrozenSnowFoxTweaks</modId>
		<key>FSFPermanentShamblerInfection</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ushanka.NecroaArchovirus" Class="PatchOperationAdd">
				<xpath>/Defs</xpath>
				<value>

	<HediffDef>
		<defName>FSF_PermanentNecroa</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
		<label>permanent necroa</label>
		<description>A dormant strain of the necroa archovirus.  Upon death the host will turn into a shambler.</description>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<initialSeverity>1.0</initialSeverity>
		<isBad>false</isBad>
		<scenarioCanAdd>True</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties">
				<compClass>USH_NA.HediffCompNecroa</compClass>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath" />
			<li Class="HediffCompProperties_RemoveIfOtherHediff">
				<hediffs>
					<li>Shambler</li>
				</hediffs>
			</li>
		</comps>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
					
				</value>
			</li>
			
			<li MayRequire="Ludeon.RimWorld.Anomaly,Ludeon.RimWorld.Biotech,Ushanka.NecroaArchovirus" Class="PatchOperationAdd">
				<xpath>/Defs/GeneDef[defName="PerfectImmunity"]/makeImmuneTo</xpath>
					<value>
						<li>FSF_PermanentNecroa</li>
					</value>
			</li>
				
			</operations>
		</Operation>
			
		</caseTrue>
	</Operation>

</Patch>