<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
			<li Class="PatchOperationAdd">
				<xpath>/Defs/XmlExtensions.SettingsMenuDef[defName = "FrozenSnowFoxTweaksSettings"]/settings/li[tag="FrozenSnowFoxTweaksPacksAreNotBelts"]/settings</xpath>
				<value>

			
						
			<li Class="XmlExtensions.Setting.Text">
				<text>Packs Are Not Belts Tweaks</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>FSFTweaksPacksAreNotBeltsTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
			
			<!-- Grenade Belt Layering -->
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<label>Grenade Belt Layering</label>
				<key>FSFGrenadeBeltLayering</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFTweaksGrenadeBeltLayeringTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor">
				<color>(163,177,188)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Changes the wearable grenade belts from Vanilla Weapons Expanded Grenades to use the Artifact layer added by Packs Are Not Belts.\nNote: This tweak requires the Artifact layer to be enabled in the Packs Are Not Belts mod settings.</text>
				<tKey>FSFTweaksGrenadeBeltLayeringDesc</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
						
				
					
				</value>
			</li>
				
			</operations>
		</Operation>
	
</Patch>