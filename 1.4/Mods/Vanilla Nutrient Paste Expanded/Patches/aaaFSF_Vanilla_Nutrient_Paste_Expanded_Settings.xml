<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
		<Operation Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				
			<li Class="PatchOperationAdd">
				<xpath>/Defs/XmlExtensions.SettingsMenuDef[defName = "FrozenSnowFoxTweaksSettings"]/settings/li[tag="FrozenSnowFoxTweaksVanillaNutrientPaste"]/settings</xpath>
				<value>

			
						
			<li Class="XmlExtensions.Setting.Text">
				<text>Vanilla Nutrient Paste Expanded Tweaks</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>FSFTweaksVanillaNutrientPasteTweaksTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
			
			<!-- Larger Paste Storage -->
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<label>Larger Paste Storage</label>
				<key>FSFLargerPasteStorageOn</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFTweaksLargerPasteStorageTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.ToggleableSettings">
				<key>FSFLargerPasteStorageOn</key>
				<caseFalse>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Allows you to customise how much nutrient paste the tanks store.</text>
						<tKey>FSFTweaksLargerPasteStorageOnDesc</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>				
				</caseFalse>
				<caseTrue>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Numeric">
						<key>FSFLargerPasteStorageTank</key>
						<defaultValue>75</defaultValue>
						<min>1</min>
						<max>100000</max>
						<label>Nutrient Paste Tanks</label>
						<tKey>FSFTweaksLargerPasteStorageTank</tKey>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Input a value to adjust the amount of paste that can be stored within the tanks.</text>
						<tKey>FSFTweaksLargerPasteStorageDesc</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>
				</caseTrue>
			</li>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>					
						
				
					
				</value>
			</li>
				
			</operations>
		</Operation>
	
</Patch>